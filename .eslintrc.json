{
    "env": {
        "node": true,
        "es2022": true,
        "mocha": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "globals": {
        "browser": "readonly",
        "$": "readonly",
        "$$": "readonly",
        "expect": "readonly"
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-console": "off",
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "no-undef": "error"
    }
}
